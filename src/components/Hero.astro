---
import Button from './ui/Button.astro';
import { getCurrentLanguage, getTranslations } from '../lib/i18n';

const currentLang = getCurrentLanguage();
const t = getTranslations(currentLang);

// Get hero configuration from environment variables
const heroBadgeText = import.meta.env.HERO_BADGE_TEXT || t.welcomeBadge;
const heroTitle = import.meta.env.HERO_TITLE || t.heroTitle;
const heroSubtitle = import.meta.env.HERO_SUBTITLE || '';
const heroDescription = import.meta.env.HERO_DESCRIPTION || t.heroDescription;
const primaryButtonText = import.meta.env.HERO_PRIMARY_BUTTON_TEXT || t.startReading;
const secondaryButtonText = import.meta.env.HERO_SECONDARY_BUTTON_TEXT || t.learnMore;
const secondaryButtonUrl = import.meta.env.HERO_SECONDARY_BUTTON_URL || '/about';

// Enhanced personalization options
const heroAnimation = import.meta.env.HERO_ANIMATION || 'fade-up'; // fade-up, slide-in, scale-in
const heroStyle = import.meta.env.HERO_STYLE || 'gradient'; // gradient, minimal, bold
const showStats = import.meta.env.HERO_SHOW_STATS === 'true';
const authorName = import.meta.env.AUTHOR_NAME || 'Blog Author';
const authorAvatar = import.meta.env.AUTHOR_AVATAR || '';

// Split title for gradient effect
const titleParts = heroTitle.split(' ');
const mainTitle = titleParts.slice(0, -1).join(' ');
const gradientTitle = heroSubtitle || titleParts.slice(-1).join(' ');

// Mock stats (in real app, these would come from Notion API)
const stats = [
  { label: currentLang === 'zh' ? '文章' : 'Articles', value: '50+' },
  { label: currentLang === 'zh' ? '读者' : 'Readers', value: '10K+' },
  { label: currentLang === 'zh' ? '国家' : 'Countries', value: '25+' }
];
---

<!-- Enhanced Hero Section -->
<section class="relative max-w-5xl mx-auto px-6 py-16 md:py-20 lg:py-24">
  <!-- Dynamic Background Effects -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <!-- Animated gradient orbs -->
    <div class="absolute top-0 left-1/3 w-72 h-72 bg-gradient-to-br from-vercel-blue/15 to-vercel-cyan/15 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-0 right-1/3 w-64 h-64 bg-gradient-to-br from-vercel-pink/15 to-vercel-purple/15 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    
    <!-- Floating particles -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-vercel-blue/40 rounded-full animate-bounce" style="animation-delay: 0.5s;"></div>
      <div class="absolute top-3/4 right-1/4 w-1 h-1 bg-vercel-cyan/40 rounded-full animate-bounce" style="animation-delay: 1.5s;"></div>
      <div class="absolute top-1/2 left-3/4 w-1.5 h-1.5 bg-vercel-purple/40 rounded-full animate-bounce" style="animation-delay: 2s;"></div>
    </div>
  </div>
  
  <div class={`text-center space-y-8 ${heroAnimation === 'slide-in' ? 'hero-slide-in' : heroAnimation === 'scale-in' ? 'hero-scale-in' : 'fade-in'}`}>
    <!-- Author Introduction (if avatar provided) -->
    {authorAvatar && (
      <div class="flex flex-col items-center gap-4 mb-6">
        <div class="relative">
          <img 
            src={authorAvatar} 
            alt={authorName}
            class="w-16 h-16 rounded-full border-2 border-border shadow-lg"
          />
          <div class="absolute -bottom-1 -right-1 w-5 h-5 bg-green-500 border-2 border-background rounded-full"></div>
        </div>
        <p class="text-sm text-foreground/60">
          {currentLang === 'zh' ? `你好，我是 ${authorName}` : `Hi, I'm ${authorName}`}
        </p>
      </div>
    )}

    <!-- Status Badge with enhanced styling -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-secondary/80 backdrop-blur-sm border border-border text-sm font-medium text-foreground/80 hover:bg-secondary transition-colors">
      <div class="w-2 h-2 rounded-full bg-gradient-to-r from-vercel-blue to-vercel-cyan animate-pulse"></div>
      {heroBadgeText}
      <svg class="w-3 h-3 text-foreground/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
    </div>

    <!-- Main Heading with enhanced styling -->
    <div class="space-y-6">
      <h1 class={`font-bold tracking-tight leading-tight ${
        heroStyle === 'bold' ? 'text-4xl sm:text-5xl md:text-6xl lg:text-7xl' :
        heroStyle === 'minimal' ? 'text-3xl sm:text-4xl md:text-5xl' :
        'text-3xl sm:text-4xl md:text-5xl lg:text-6xl'
      }`}>
        {mainTitle && (
          <span class="block text-foreground mb-2">
            {mainTitle}
          </span>
        )}
        <span class={`block ${
          heroStyle === 'minimal' ? 'text-foreground/80' :
          'bg-gradient-to-r from-vercel-blue via-vercel-cyan to-vercel-purple bg-clip-text text-transparent'
        }`}>
          {gradientTitle}
        </span>
      </h1>
      
      <p class="text-base md:text-lg lg:text-xl text-foreground/60 max-w-3xl mx-auto leading-relaxed">
        {heroDescription}
      </p>
    </div>

    <!-- Enhanced CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-6">
      <Button asChild size="lg" class="group bg-foreground text-background hover:bg-foreground/90 rounded-lg px-8 py-3 font-medium shadow-lg hover:shadow-xl transition-all duration-300" href="#posts">
        <span class="flex items-center gap-2">
          {primaryButtonText}
          <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12,5 19,12 12,19"></polyline>
          </svg>
        </span>
      </Button>
      <Button asChild variant="outline" size="lg" class="border-border hover:bg-secondary rounded-lg px-8 py-3 font-medium hover:border-foreground/30 transition-all duration-300" href={secondaryButtonUrl}>
        {secondaryButtonText}
      </Button>
    </div>

    <!-- Stats Section (optional) -->
    {showStats && (
      <div class="pt-12 border-t border-border/50 mt-12">
        <div class="grid grid-cols-3 gap-8 max-w-md mx-auto">
          {stats.map((stat, index) => (
            <div class="text-center space-y-2" style={`animation-delay: ${index * 200}ms`}>
              <div class="text-2xl md:text-3xl font-bold text-foreground counter" data-target={stat.value}>
                {stat.value}
              </div>
              <div class="text-sm text-foreground/60 font-medium">
                {stat.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- Scroll Indicator -->
    <div class="pt-8">
      <div class="flex flex-col items-center gap-2 text-foreground/40 hover:text-foreground/60 transition-colors cursor-pointer" onclick="document.getElementById('posts')?.scrollIntoView({behavior: 'smooth'})">
        <span class="text-xs font-medium">{currentLang === 'zh' ? '向下滚动' : 'Scroll down'}</span>
        <svg class="w-4 h-4 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hero Animation Variants */
  .hero-slide-in {
    animation: slideInFromLeft 1s ease-out forwards;
  }

  .hero-scale-in {
    animation: scaleInFromCenter 1s ease-out forwards;
  }

  @keyframes slideInFromLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes scaleInFromCenter {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Enhanced counter animation */
  .counter {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Floating animation for particles */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>

<script>
  function initHeroAnimations() {
    // Counter animation
    const counters = document.querySelectorAll('.counter');
    
    const animateCounter = (counter: Element) => {
      const target = counter.getAttribute('data-target') || '0';
      const numericTarget = parseInt(target.replace(/\D/g, '')) || 0;
      const suffix = target.replace(/\d/g, '');
      let current = 0;
      const increment = numericTarget / 50; // 50 steps
      
      const updateCounter = () => {
        if (current < numericTarget) {
          current += increment;
          counter.textContent = Math.ceil(current) + suffix;
          requestAnimationFrame(updateCounter);
        } else {
          counter.textContent = target;
        }
      };
      
      updateCounter();
    };

    // Intersection Observer for counter animation
    const counterObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          animateCounter(entry.target);
          counterObserver.unobserve(entry.target);
        }
      });
    }, { threshold: 0.5 });

    counters.forEach(counter => {
      counterObserver.observe(counter);
    });

    // Parallax effect for background elements
    const handleParallax = () => {
      const scrolled = window.pageYOffset;
      const parallaxElements = document.querySelectorAll('.absolute');
      
      parallaxElements.forEach((element, index) => {
        const speed = 0.5 + (index * 0.1);
        const yPos = -(scrolled * speed);
        (element as HTMLElement).style.transform = `translateY(${yPos}px)`;
      });
    };

    // Throttled scroll handler
    let ticking = false;
    const handleScroll = () => {
      if (!ticking) {
        requestAnimationFrame(() => {
          handleParallax();
          ticking = false;
        });
        ticking = true;
      }
    };

    window.addEventListener('scroll', handleScroll, { passive: true });
  }

  // Initialize on page load
  initHeroAnimations();
  
  // Re-initialize on navigation
  document.addEventListener('astro:page-load', initHeroAnimations);
</script>